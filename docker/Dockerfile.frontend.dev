FROM node:10-alpine

WORKDIR /home/frontend/frontend
COPY frontend ./

RUN apk add --update && \
    npm install -g @angular/cli && \
    npm install

COPY docker/boot_frontend.sh /home/frontend

RUN chmod +x /home/frontend/boot_frontend.sh

EXPOSE 4200
ENTRYPOINT [ "/home/frontend/boot_frontend.sh" ]
